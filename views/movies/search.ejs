<!-- search.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .card {
            width: 18rem; /* Adjust the width as needed */
        }
    </style>
</head>
<body>
    <% include navbar.ejs %>
    <div class="container">
        <h1 class="mt-5">Search Results</h1>
        <form action="/movies/search" method="GET" class="mt-3">
            <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="Search movies" required>
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
        <div class="row mt-5">
            <% movies.forEach(movie => { %>
                <div class="col-md-3"> <!-- Adjust the column size -->
                    <div class="card mb-4">
                        <% if (movie.Poster !== 'N/A') { %>
                            <img src="<%= movie.Poster %>" class="card-img-top" alt="<%= movie.Title %>">
                        <% } else { %>
                            <div class="no-image-placeholder">No Image Available</div>
                        <% } %>
                        <div class="card-body">
                            <h5 class="card-title"><%= movie.Title %></h5>
                            <p class="card-text">Year: <%= movie.Year %></p>
                            <form action="/lists/add" method="POST">
                                <input type="hidden" name="movieId" value="<%= movie.imdbID %>">
                                <div class="form-group">
                                    <label for="listId">Add to List:</label>
                                    <select name="listId" class="form-control" id="listId">
                                        <% lists.forEach(list => { %>
                                            <option value="<%= list._id %>"><%= list.name %> - <%= list.isPublic ? 'Public' : 'Private' %></option>
                                        <% }) %>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Add to List</button>
                            </form>
                        </div>
                    </div>
                </div>  
            <% }) %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
