<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= list.name %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1 class="mt-5"><%= list.name %></h1>
        <p class="mb-5"><%= list.isPublic ? 'Public' : 'Private' %></p>
        <h2>Movies in this list:</h2>
        <ul class="list-group mb-5">
            <% list.movies.forEach(movie => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <h5><%= movie.title %></h5>
                        <p>Year: <%= movie.year %></p>
                        <p>IMDB ID: <%= movie.imdbID %></p>
                    </div>
                    <form action="/lists/remove" method="POST">
                        <input type="hidden" name="listId" value="<%= list._id %>">
                        <input type="hidden" name="movieId" value="<%= movie._id %>">
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </li>
            <% }) %>
        </ul>
        
        <a href="/movies/home" class="btn btn-secondary mt-5">Back to Home</a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
